<% include ../partials/header %>

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div style="width: 100%; margin: 30px auto;">
        <h1 style="text-align: center">Edit<%= product.name %></h1>
        </div>
        <div style="width: 40%; margin: 0px auto;">
             
            <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="product[brand]" value="<%= product.brand %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="product[productID]" value="<%= product.productID %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="product[image]" value="<%= product.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="product[description]" value="<%= product.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/products">Back to products page</a>
        </div>
    </div>
</div>
<!-- /.container -->

<% include ../partials/footer%>